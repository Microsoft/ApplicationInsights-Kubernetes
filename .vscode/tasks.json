{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "args": [
                "build",
                "${workspaceFolder}/ApplicationInsights.Kubernetes.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run Unit Tests",
            "command": "dotnet",
            "type": "process",
            "group": "test",
            "args": [
                "test",
                "${workspaceFolder}/tests/UnitTests"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}